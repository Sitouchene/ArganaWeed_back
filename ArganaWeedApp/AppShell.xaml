<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArganaWeedApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ArganaWeedApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ArganaWeedApp">

    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    <ShellContent Route="MenuPage" ContentTemplate="{DataTemplate local:MenuPage}" />
    <ShellContent Route="PlantulesPage" ContentTemplate="{DataTemplate local:PlantulesPage}" />
    <ShellContent Route="EmplacementsPage" ContentTemplate="{DataTemplate local:EmplacementsPage}" />
    <ShellContent Route="EmplacementDetailPage" ContentTemplate="{DataTemplate local:EmplacementDetailPage}" />
    <ShellContent Route="EmplacementNewPage" ContentTemplate="{DataTemplate local:EmplacementNewPage}" />

    <ShellContent Title="Plantule Fiche" ContentTemplate="{DataTemplate local:PlantuleFichePage}" />
    <ShellContent Route="EmplacementNewPage" ContentTemplate="{DataTemplate local:EmplacementNewPage}" />

</Shell>
