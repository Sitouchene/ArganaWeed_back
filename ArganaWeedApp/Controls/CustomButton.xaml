<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArganaWeedApp.Controls.CustomButton">
    <Frame BackgroundColor="DarkGreen" CornerRadius="10" Padding="0">
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="{Binding Icon}" FontFamily="MaterialIcons-Regular" TextColor="White" FontSize="Medium" VerticalOptions="Center" Grid.Column="0" />
            <Label Text="{Binding Text}" TextColor="White" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0" Grid.Column="1" />

            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnButtonTapped"/>
            </Grid.GestureRecognizers>
        </Grid>
    </Frame>
</ContentView>
