<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArganaWeedApp.Views.QrTest"
             Title="QrTest">

    <StackLayout Padding="10">
        <Label Text="Entrez votre string:" />
        <Entry x:Name="inputEntry" Placeholder="Entrez un texte" />
        <Button Text="Générer le QR Code" Clicked="OnGenerateQRCodeClicked"/>
        <Image x:Name="qrCodeImage" WidthRequest="200" HeightRequest="200"/>
        <Button Text="Scanner un QR Code" Clicked="OnScanQRCodeClicked"/>
    </StackLayout>

</ContentPage>