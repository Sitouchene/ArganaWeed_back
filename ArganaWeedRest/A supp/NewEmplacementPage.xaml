<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="http://schemas.devexpress.com/maui"
             Title="{Binding Title}"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             ios:Page.UseSafeArea="true"
             x:Class="ArganaWeedAppDevEx.Views.NewEmplacementPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <dx:DataFormView x:Name="dataForm" DataObject="{Binding .}" CommitMode="PropertyChanged" ContentPadding="0" Margin="15">
            <dx:DataFormTextItem InplaceLabelText="Code" FieldName="EmplacementCode" IsLabelVisible="False" />
            <dx:DataFormTextItem InplaceLabelText="Description" FieldName="EmplacementDescription" IsLabelVisible="False" />
        </dx:DataFormView>
    </ContentPage.Content>
</ContentPage>
